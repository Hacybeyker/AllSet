<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.clipboard.ClipBoardActivity">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/etCopy"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:hint="insert your text to clipboard"
        android:inputType="textMultiLine"
        android:maxLines="2"
        app:layout_constraintEnd_toStartOf="@id/ibCopy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ibCopy"
        android:layout_width="@dimen/dimen_50dp"
        android:layout_height="@dimen/dimen_50dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:background="@android:color/transparent"
        android:src="@drawable/icon_clip_board"
        app:layout_constraintBottom_toBottomOf="@id/etCopy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/etCopy"
        app:layout_constraintTop_toTopOf="@id/etCopy" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPaste"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCopy" />

</androidx.constraintlayout.widget.ConstraintLayout>